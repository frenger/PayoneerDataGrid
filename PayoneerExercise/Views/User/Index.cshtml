<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Users</h1>
            </div>
            <div class="panel-body">
                <table id="users-data-table" class="table table-striped table-bordered" style="width:100%;">
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    
<script type="text/javascript">
        var userListVM;
        $(function () {
            userListVM = {
                dt: null,

                init: function () {
                    dt = $('#users-data-table').DataTable({
                        "serverSide": true,
                        "processing": true,
                        "ajax": {
                            "url": "@Url.Action("Get","User")"
                        },
                        "columns": [
                            { "title": "User ID", "data": "UserId", "searchable": false, "orderable": false },
                            { "title": "First Name", "data": "FirstName", "searchable": true, "orderable": true },
                            { "title": "Last Name", "data": "LastName", "searchable": true, "orderable": true },
                            { "title": "Age", "data": "Age", "searchable": false, "orderable": false }
                        ],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "aaSorting": [[2, 'asc']],
                    });
                }
            }

            // initialize the datatables
            userListVM.init();

        });

</script>
    
 }